{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    
    // для SSR краще не використовувати src як root
    "baseUrl": ".",
    
    "types": ["react", "react-dom"]
  },
  "include": ["src"]
}